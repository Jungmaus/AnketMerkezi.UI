
@{
    ViewData["Title"] = "Anket Ekle";
    Layout = "~/Views/Shared/_PanelLayout.cshtml";
}

@model SurveyAdd

<div class="col-md-12">

    <div class="form-group">
        <label>Anket Adı <label style="color:red;">*</label>: </label>
        @Html.TextBoxFor(x=>x.Name,new { @class="form-control",required="required",maxlength="45" })
    </div>
    <div class="form-group">
        <label>Açıklama (Opsiyonel) : </label>
        @Html.TextAreaFor(x=>x.Description,new { @class = "form-control",rows="5",maxlength="300" })
    </div>
    <div class="form-group">
        <label>İçerik : </label>
        <div class="form-group" style="display:flex;">
            <div class="col-md-6">
                <input type="text" class="form-control" placeholder="Soru" maxlength="45" />
            </div>
            <div class="col-md-4">
                @Html.DropDownList("drpContentDataType",Model.DrpContentDataType,new { @class="form-control" })
            </div>
            <div class="col-md-2">
                <button class="btn btn-info"><i class="fa fa-plus"></i></button>
            </div>
        </div>
        <div class="form-group">
            <label>lorem ipsum is amet ? a s d ? !</label> / <label>Sayı-Tutar</label> / <button class="btn btn-danger"><i class="fa fa-ban"></i></button>
        </div>
    </div>
</div>
